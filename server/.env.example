# ECOUNT ERP Configuration
ECOUNT_COM_CODE=your_company_code
ECOUNT_USER_ID=your_user_id
ECOUNT_API_KEY=your_api_key
ECOUNT_ZONE=CD

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key

# Supabase Configuration
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Frontend URL (Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app

# Google Sheets - Service Account (JSON string for cloud, file path for local)
# For Railway: paste the entire JSON as a single-line string
GOOGLE_SERVICE_ACCOUNT_JSON=
# For local dev: path to the key file
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./credentials/service-account.json

# Google Sheets - Spreadsheet IDs
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SALES_PURCHASE_SPREADSHEET_ID=your_sales_purchase_spreadsheet_id
GOOGLE_BOM_SPREADSHEET_ID=your_bom_spreadsheet_id
